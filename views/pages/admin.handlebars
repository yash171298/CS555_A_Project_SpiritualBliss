                name="product_type"
                class="form-control"
              />
            </div> --}}

            {{!-- <div id="properties">

            </div>

            <button type="button" class="btn btn-primary" id="add_property">Add
              Property</button> --}}

          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >Close</button>
            <button
              type="button"
              class="btn btn-primary"
              id="add_product_sub"
            >Add Product</button>
          </div>
          <div id="error_msg"></div>
        </form>
      </div>
    </div>
  </div>
</div>
<div id="admin_table">
  <table id="example" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Count</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each productList}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td>{{this.stock}}</td>
          <td><button
              type="button"
              class="btn btn-danger delete_product"
              data-id="{{this._id}}"
            >Delete</button></td>
        </tr>

      {{/each}}

    </tbody>
  </table>

  <a href="/admin/logout" class="btn btn-danger">Admin Log Out</a>
</div>