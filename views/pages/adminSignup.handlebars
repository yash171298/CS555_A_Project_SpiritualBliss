<div class="container">

  {{#if adminErrors}}
    {{#each adminErrors}}
      <div class="" id="adminSignupError">
        {{this}}
      </div>
    {{/each}}
  {{/if}}

  <form
    action="/admin/signup"
    method="POST"
    class="form-horizontal"
    id="admin-signup-form"
  >
    <div class="row">
      <div class="col-8 offset-4">
        <h2>Sign Up</h2>
      </div>
    </div>
    {{!  }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="adminFirstName">Admin's First
        Name:
      </label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          name="adminFirstName"
          id="adminFirstName"
          value="{{info.adminFirstName}}"
          required="required"
        />
        <div class="invalid-feedback">
          First name cannot be empty
        </div>
      </div>
    </div>

    {{!  }}

    <div class="form-group row">
      <label class="col-form-label col-4" for="adminLastName">Admin's Last Name:
      </label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          name="adminLastName"
          id="adminLastName"
          value="{{info.adminLastName}}"
          required="required"
        />
        <div class="invalid-feedback">
          Last name cannot be empty
        </div>
      </div>
    </div>
    {{!  }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="adminId">EmailId: </label>
      <div class="col-8">
        <input
          type="email"
          class="form-control"
          name="adminId"
          id="adminId"
          value="{{info.adminId}}"
          required="required"
        />
        <div class="invalid-feedback">
          email id cannot be empty
        </div>

      </div>

    </div>
    {{!  }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="adminSignUpPassword">Password:
      </label>
      <div class="col-8">
        <input
          type="password"
          class="form-control"
          name="adminSignUpPassword"
          id="adminSignUpPassword"
          required="required"
        />
        <div class="invalid-feedback">
          Password cannot be empty
        </div>
      </div>
    </div>
    {{!  }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="secretPasscode">Secret Passcode:
      </label>
      <div class="col-8">
        <input
          type="password"
          class="form-control"
          name="secretPasscode"
          id="secretPasscode"
          required="required"
        />
        <div class="invalid-feedback">
          secret pass code cannot be empty
        </div>
      </div>
    </div>

    {{!  }}
    <div class="form-group row">
      <div class="col-8 offset-4">
        <input id="admin-submit" type="submit" class="btn btn-primary btn-lg" />
      </div>
    </div>
    {{!  }}

  </form>

</div>
<script src="../../public/js/adminSignup.js" defer></script>