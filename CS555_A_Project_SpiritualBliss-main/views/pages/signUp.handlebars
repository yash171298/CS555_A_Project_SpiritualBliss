<div class="signup-form container">
  <form
    action="/users/signup"
    id="signup-form"
    method="POST"
    class="form-horizontal"
  >
    <div class="row">
      <div class="col-8 offset-4">
        <h2>Sign Up</h2>
      </div>
    </div>
    {{! }}
    {{#if error}}
      <div>
        <p class="text-danger"> Error: {{error}} </p>
      </div>
    {{/if}}
    {{!  }}
    {{#if errors}}
      {{#each errors}}
        <div>
          <p class="text-danger"> {{this}} </p>
        </div>
      {{/each}}
    {{/if}}
    {{!  }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="firstName">First Name: </label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          name="firstName"
          id="firstName"
          required="required"
        />
        <div class="invalid-feedback">
          First name cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="lastName">Last Name: </label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          name="lastName"
          id="lastName"
          required="required"
        />
        <div class="invalid-feedback">
          Last name cannot be empty
        </div>
      </div>

    </div>
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="emailId">Email Id: </label>
      <div class="col-8">
        <input
          type="email"
          class="form-control"
          name="emailId"
          id="emailId"
          required="required"
        />
        <div class="invalid-feedback">
          Email cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="password">Password: </label>
      <div class="col-8">
        <input
          type="password"
          class="form-control"
          name="password"
          id="password"
          required="required"
        />
        <div class="invalid-feedback">
          Password cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="phoneNumber">Phone Number:
      </label>
      <div class="col-8">
        <input
          type="number"
          class="form-control"
          id="phoneNumber"
          name="phoneNumber"
          required="required"
        />
        <div class="invalid-feedback">
          Phone number cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="Line1">Address Line 1:</label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          name="Line1"
          id="Line1"
          required="required"
        />
        <div class="invalid-feedback">
          Line 1 cannot be empty
        </div>
      </div>
    </div>
    {{! }}

    <div class="form-group row">
      <label class="col-form-label col-4" for="Line2">Address Line 2:</label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          name="Line2"
          id="Line2"
          required="required"
        />
        <div class="invalid-feedback">
          Line 2 cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="City">City: </label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          name="City"
          id="City"
          required="required"
        />
        <div class="invalid-feedback">
          City name cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="State">State: </label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          name="State"
          id="State"
          required="required"
        />
        <div class="invalid-feedback">
          State cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="ZipCode">Zip Code: </label>
      <div class="col-8">
        <input
          type="number"
          class="form-control"
          name="ZipCode"
          id="ZipCode"
          required="required"
        />
        <div class="invalid-feedback">
          Zipcode cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    <div class="form-group row">
      <div class="col-8 offset-4">
        <input type="submit" id="submitInfo" class="btn btn-primary btn-lg" />
      </div>
    </div>
    <div class="container">
      <h3>
        Already an User? :
        <a href="/users/form" class="btn btn-primary btn-lg text-uppercase">Log
          In</a></h3>
    </div>
    {{! }}
  </form>
</div>

<script src="../../public/js/signUp.js" defer></script>